         AnchorPane.bottomAnchor="595.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <Label styleClass="label" stylesheets="@styles.css" text="Калькулятор">
      </Label>
      <Button mnemonicParsing="false" onMouseClicked="#minimize" styleClass="minimizeButton, button"
              stylesheets="@styles.css">
         <HBox.margin>
            <Insets left="123.0"/>
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" styleClass="fullScreenButton, button" stylesheets="@styles.css">
         <HBox.margin>
            <Insets/>
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" onMouseClicked="#close" styleClass="closeButton, button"
              stylesheets="@styles.css"/>
   </HBox>
</AnchorPane>
